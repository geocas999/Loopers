<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title - Garage 2.0</title>
    @Styles.Render("~/Content/css/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <header>
            @*<nav class="navbar navbar-inverse" role="navigation">*@
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button"
                                class="navbar-toggle collapsed"
                                data-toggle="collapse"
                                data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        @Html.ActionLink("The Loopers", "Index", "Vehicles1/Index", new { area = "" }, new { @class = "navbar-brand active" })

                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Register", "Index", "Vehicles")</li>*@

                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Hem", "Home", "Home")</li>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Medlemmar", "Index", "Members")</li>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "VehicleTypes" ? "active" : "")">@Html.ActionLink("Fordonstyper", "Index", "VehicleTypes")</li>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "" ? "active" : "")">@Html.ActionLink("Register", "Index", "Vehicles1")</li>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Create" ? "active" : "")">@Html.ActionLink("Check-In", "Create", "Vehicles1")</li>
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "CheckOutBySearching" ? "active" : "")">@Html.ActionLink("Check-out", "CheckOutBySearching", "Vehicles1")</li>
                            
                           
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container body-content">
            @RenderBody()
        </div>

        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - Garage 2.0 by the Loopers: Tomas, George, Mattias</p>
        </footer>

        @Scripts.Render("~/bundles/otf")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
   </div>
</body>
</html>
