@model IEnumerable<Garage2.Models.Vehicle>

@{
    ViewBag.Title = "Sort";
}

<h2>Sortering</h2>

<p>
    @Html.ActionLink("Tillbaka till Lista", "Index")
</p>
<table class="table">

    <tr>
        <th>
            @Html.ActionLink("Fordonstyp", "Sort", new { Sorting_Order = "VehicleType" })
        </th>
        <th>
            @Html.ActionLink("Registreringsnummer", "Sort", new { Sorting_Order = "RegNr" })
        </th>
        <th>
            @Html.ActionLink("Parkering påbörjad", "Sort", new { Sorting_Order = "StartTime" })
        </th>
        <th>
            @Html.ActionLink("Märke", "Sort", new { Sorting_Order = "Brand" })
        </th>
        <th>
            @Html.ActionLink("Modell", "Sort", new { Sorting_Order = "Model" })
        </th>
        <th>
            @Html.ActionLink("Färg", "Sort", new { Sorting_Order = "Color" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @Html.ActionLink("Detaljvy", "Details", new { id = item.Id }) |
                @Html.ActionLink("Kör ut fordon", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
