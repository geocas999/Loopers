@model IEnumerable<Garage2.Models.Member>

@{
    ViewBag.Title = "Index";
}

<h2>Medlemmar</h2>

<br/>
<div class="Row">  
    <div class="col-md-4">        
        @Html.ActionLink("Skapa ny medlem", "Create")      
    </div>
        
    <div class="col-md-8">
        <form method="get"
                action="@Url.Action("Index")"
                data-tomas-ajax="true"
                data-tomas-target="#searchList">

            <input id="inputRegister1"
                    class="form-control"
                    style="height:34px; width:190px"
                    type="search"
                    name="searchTerm"
                    placeholder="Sök medlem"
                    data-tomas-autocomplete="@Url.Action("Autocomplete")" />
        </form>
    </div>
   
</div>
<br /><br />
<br />
<div id="searchList">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberNr ))
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberNr)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

<div>
@Html.ActionLink("Tillbaka till medlem", "Index")
</div>
